@model LimonSelling.Models.Order

@{
    ViewBag.Title = "Order Detils";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Details</h2>
<div id="div_print">
    <div class="row">
        <div class="col-lg-4">
            <dl class="dl-horizontal">
                <dt>
                    Order Number:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.id)
                </dd>
                <dt>
                    Customer Name:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.name)
                </dd>
                <dt>
                    Mobile Number:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.number)
                </dd>
                <dt>
                    Delivery Charge:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deliveryCharge)
                </dd>
                <dt>
                    Other Charge:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.otherCharge)
                </dd>
                <dt>
                    Total:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.total) Taka Only
                </dd>

                <dt>
                    Payment:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PaymentMethod.name)
                </dd>

                <dt>
                    Delivery Address:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deliveryAddress)
                </dd>
                <dt>
                    City:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City.name)
                </dd>
                <dt>
                    Status:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.status)
                </dd>

                <dt>
                    Order Date:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.dateTime)
                </dd>

            </dl>
        </div>
        <div class="col-lg-8">
            <table class="table">
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    


                </tr>

                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rate)
                        </td>
                        

                    </tr>
                }

            </table>
        </div>
    </div>
    
</div>


<p>
    @Html.ActionLink("Confirm Order", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


