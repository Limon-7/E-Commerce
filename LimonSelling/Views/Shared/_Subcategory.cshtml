@model IEnumerable<LimonSelling.Models.Category> 

@if (Model.Count()>0)
{
       <ul class="">
           @foreach (var item in Model)
           {


               <li>
                   <a href="../Public/Product?Category=@item.id">@item.name (@item.Products.Count)</a>
                 
                   @*<p>@item.description</p>*@
                   @Html.Partial("_Subcategory", item.Category1)
               </li>
           }
       </ul>
   
}