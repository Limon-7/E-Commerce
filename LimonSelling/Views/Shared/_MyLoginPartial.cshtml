

@if (Session["type"].ToString() == "Admin")
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="../MyAccount/AdminDetails/@Session["id"].ToString()">@Session["name"].ToString()</a>

        </li>
        <li>@Html.ActionLink("Logout", "Logout", "MyAccount")</li>

    </ul>
}
else if (Session["type"].ToString() == "user")
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="../MyAccount/AccountDetails/@Session["id"].ToString()">@Session["name"].ToString()</a>

        </li>
        <li>@Html.ActionLink("Logout", "Logout", "MyAccount")</li>

    </ul>
}

else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Login", "Login", "MyAccount")</li>
        <li>@Html.ActionLink("Register", "Register", "MyAccount")</li>
    </ul>
}

