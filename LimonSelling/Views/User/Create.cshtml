@model LimonSelling.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New User</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
