@model IEnumerable<LimonSelling.Models.ProductStock>

@{
    ViewBag.Title = "Product Stok List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Stok List</h2>

<p>
    @Html.ActionLink("Create New Product Stock", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.outQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateTime)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateTime)
        </td>
       
        <td>
            @Html.ActionLink("Update", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
